extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='no') 集數:
      input#no.form-control(type='text', placeholder='NO of book' name='no' required='true' value=(undefined===book ? '' : book.no) )
    div.form-group
      label(for='title') 書名:
      input#title.form-control(type='text', placeholder='Name of book' name='title' required='true' value=(undefined===book ? '' : book.title) )
    div.form-group
      label(for='author') 作者:
      input#author.form-control(type='text', placeholder='原裕' name='author' required='true' value=(undefined===book ? '原裕' : book.author) )
    
    div.form-group
      label(for='status') 狀態:
        if book
          select#status.form-control(type='select' placeholder='Select status' name='status' required='true')
            option(value='還沒看過' selected=(book.status=='還沒看過'?'selected':false)) 還沒看過
            option(value='看過:圖書館' selected=(book.status=='看過:圖書館'?'selected':false)) 看過:圖書館
            option(value='看過:收藏中' selected=(book.status=='看過:收藏中'?'selected':false)) 看過:收藏中 
        else
          select#status.form-control(type='select' placeholder='Select status' name='status' required='true')
            option(value='還沒看過') 還沒看過
            option(value='看過:圖書館' ) 看過:圖書館
            option(value='看過:收藏中' ) 看過:收藏中
            
    div.form-group
      label(for='review_star') STAR:
        if book
          select#review_star.form-control(type='select' placeholder='Select review_star' name='review_star' required='true')
            option(value='1' selected=(book.review_star=='1'?'selected':false)) 1顆星: 失望,作者要加油喔
            option(value='2' selected=(book.review_star=='2'?'selected':false)) 2顆星: 普通,不太懂笑點在哪
            option(value='3' selected=(book.review_star=='3'?'selected':false)) 3顆星: 很棒,感謝佐羅力+伊豬豬+魯豬豬
            option(value='4' selected=(book.review_star=='4'?'selected':false)) 4顆星: 超有趣,搞笑又感人,還學到很多做人道理喔
            option(value='5' selected=(book.review_star=='5'?'selected':false)) 5顆星: 超讚,想給作者一張貼紙
        else
          select#review_star.form-control(type='select' placeholder='Select status' name='review_star' required='true')
            option(value='1' ) 1顆星
            option(value='2' ) 2顆星
            option(value='3' ) 3顆星
            option(value='4' ) 4顆星
            option(value='5' ) 5顆星      
    div.form-group
      label(for='review_summary') Summary:
      textarea#review_summary.form-control(type='textarea', placeholder='Summary' name='review_summary' rows='3' required='true') #{undefined===book ? '' : book.review_summary}
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg
